{
  "compilerOptions": {
    "target": "es2017",
    "module": "ES6",
    "outDir": "./assets/js",
    "rootDir": "./src",
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["src/*.ts"]
}